<%- include('../common/nav-bar.ejs') %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Add Book</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Add book</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form action="/admin/update_book/<%= book.id %>"
                            method="POST">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input id="name" class="form-control"
                                    name="name"
                                    placeholder="Enter the book name"
                                    value="<%= book.name %>">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <input id="description" class="form-control"
                                    name="description"
                                    placeholder="Enter the book description"
                                    value="<%= book.description %>">
                            </div>
                            <div class="form-group">
                                <label for="status">Status</label>
                                <input id="status" class="form-control"
                                    name="status"
                                    placeholder="Enter the book status"
                                    value="<%= book.status %>">
                            </div>
                            <div class="form-group">
                                <label for="pages">Number of pages</label>
                                <input id="pages" class="form-control"
                                    name="pages"
                                    placeholder="Enter the book pages"
                                    value="<%= book.pages %>">
                            </div>
                            <div class="form-group">
                                <label for="priceXp">Price - XP</label>
                                <input id="priceXp" class="form-control"
                                    name="priceXp"
                                    placeholder="Enter the book price - xp"
                                    value="<%= book.priceXp %>">
                            </div>
                            <div class="form-group">
                                <label for="priceSdg">price - SDG</label>
                                <input id="priceSdg" class="form-control"
                                    name="priceSdg"
                                    placeholder="Enter the book price sdg"
                                    value="<%= book.priceSdg %>">
                            </div>
                            <div class="form-group">
                                <label for="note">Note</label>
                                <input id="note" class="form-control"
                                    name="note"
                                    placeholder="Enter the book note"
                                    value="<%= book.note %>">
                            </div>

                            <div class="form-group">
                                <select class="form-control" name="author">
                                    <option selected
                                        value="<%= book.author.id %>">
                                        <%= book.author.firstName + book.author.lastName %>
                                    </option>
                                    <% for (const author of authors) { %>
                                    <option value="<%= author.id %>">
                                        <%= author.firstName %>
                                        <%= author.lastName %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <select class="form-control" name="category">
                                    <option selected
                                        value="<%= book.category.id %>">
                                        <%= book.category.name %></option>
                                    <% for (const category of categories) { %>
                                    <option value="<%= category.id %>">
                                        <%= category.name %>
                                    </option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <input id="image" class="form-control" type="file"
                                    name="image" value="<%= book.image %>">
                            </div>
                            <button type="submit"
                                class="btn btn-success">Save</button>
                            <a class="btn btn-danger m-3"
                                href="/admin/delete_book/<%= book.id %>">
                                Delete
                            </a>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<%- include('../common/footer.ejs') %>
